{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "${fileDirname}/LinkedList/LinkedList.cpp",
                "${fileDirname}/LinkedList/iterator.cpp",
                "${fileDirname}/solUno/solUno.cpp",
                "${fileDirname}/controller.cpp",
                "${fileDirname}/Solucion2/HeapNode.cpp",
                "${fileDirname}/Solucion2/MaxHeap.cpp",
                "-o",
                "${fileDirname}/main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}